 <% layout('layouts/boilerplate') %> 
 <%- include('../partials/navbar') %>
<%- include('../partials/flash') %>


<div class="row">
   
  
  <div class="col-lg-6 mt-3">
   
    
    <div class="card mx-auto" style="width: 18rem">
      <img src="<%- found.img %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h2 class="card-title"><%- found.name %></h2>
        <h5 class="card-title"><%- found.price %></h5>
        <p class="card-text"><%- found.desc %></p>
        <a href="/products" class="btn btn-sm btn-light">Back</a>
        <% if(curuser && curuser.role==='seller') {%>
          <a href="/products/<%=found._id%>/edit" class="btn btn-sm btn-dark">Edit</a>
        <% } %>
        <form action="/user/<%=found._id%>/add" class="d-inline-block" method="post">
          <button class="btn btn-sm btn-secondary">Add to cart</button>
        </form>
        
        <a href="#" class="btn btn-sm btn-success">Buy</a>
        
        
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <h1 class="display-5">Leave a review</h1>
    <form action="/products/<%= found._id %>/review" method="post">
      <div>
        <fieldset class="starability-basic">
  
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
      </div>
      <div>
        <label class="form-label" for="comment">comment</label>
        <textarea class="form-control" rows="3" name="comment" id="comment"></textarea>
      </div>
      <button class="btn btn-sm btn-success">add review</button>
    </form>

    <div class="my-3">
      <% for(let r of found.reviews){ %>
        <div class="card mt-3">
          <p class="card-title mx-3">
    <%if(r.createdAt) { %>
      <%= r.createdAt.toDateString() %>

      <% } %>
  </p>
          
  <p class="starability-result" data-rating="<%=r.rating %>">
    Rated: <%=r.rating %>
  </p>
  <div class="card-body">
    
    <p class="card-text">Comment:<%= r.comment %></p>
    <a href="#" class="btn btn-primary">Delete</a>
  </div>
  
</div>
      <% } %>
    </div>
</div>
  
</div>



</body>
</html>

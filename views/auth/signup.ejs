<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-md-6 mx-auto">
        <%- include('../partials/flash') %>
        <h1 class="display-6">Sign Up
        </h1>
        <form action="/register" method="post">
            <div class="mb-3">
                <label class="form-label" for="username">username:</label>
                <input type="text" class="form-control" name="username" id="username">
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">email:</label>
                <input type="email" class="form-control" name="email" id="email">
            </div>
            <div class="mb-3">
                <p class="mb-2">Register as</p>
                <div class="mx-2">
                    <label for="buyer" class="form-label">Buyer</label>
                    <input type="radio" class="form-check-input" name="role" id="buyer" value="buyer">
                </div>
                <div class="mx-2">
                    <label for="seller" class="form-label">Seller</label>
                    <input type="radio" class="form-check-input" name="role" id="seller" value="seller">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">password:</label>
                <input type="password" class="form-control" name="password" id="password">
            </div>
            <button type="submit" class="btn btn-sm btn-success">SIGN UP</button>
            <p class="fw-light mt-2">already have an account <a href="\login">login</a></p>
        </form>
    </div>
  
</div>


</body>
</html>
